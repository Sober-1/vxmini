.all-info{
  background-color: #fff;
}
.info{
  margin: 10rpx 15rpx 0 15rpx;
  border-bottom: 1px solid #eaeaea;
}
.title{
  color: #222;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price{
  margin-top:60rpx;
  color: #ff5777;
  font-size: 48rpx;
}
.old-price{
  margin-top:60rpx;
  color: #b0b0b0;
  font-size: 26rpx;
  margin-left: 10rpx;
  text-decoration:line-through;
}
.icon{
  margin-top:60rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
  background-color: #ff5777;
  color: #fff;
  border-radius: 60rpx;
  display: inline-block;
  line-height: 34rpx;
  text-align: center;
  height: 34rpx;
  width: 92rpx;
  position: relative;
  top: -16rpx;
}

.user-info{
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #b0b0b0;
  display: flex;
  justify-content: space-between;
}

.promise{
  height: 90rpx;
  margin: 0 10rpx 8rpx 10rpx;
  line-height: 90rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.promise text{
  font-size: 26rpx;
  color: #333;
}
.promise image{
   width: 28rpx;
    height: 28rpx;
    position: relative;
    top: 4rpx;
}